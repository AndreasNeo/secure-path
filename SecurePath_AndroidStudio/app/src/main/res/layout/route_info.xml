<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_route"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@color/cardview_light_background"
    android:clickable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Select Route"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Recommended Route"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/recommended_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Alternative Routes"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/others_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>